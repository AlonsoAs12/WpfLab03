<Window x:Class="WpfLab03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
            <TextBox x:Name="searchTextBox" Width="200" Margin="0,0,10,0"/>
            <Button Content="Buscar" Click="SearchButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" Margin="10" Grid.Row="1"/>
    </Grid>
</Window>
